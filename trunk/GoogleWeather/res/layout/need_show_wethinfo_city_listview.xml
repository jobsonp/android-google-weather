<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:umadsdk="http://schemas.android.com/apk/res/com.android.sqllite1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">
    
    	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@drawable/title"
    	    android:orientation="horizontal" >

    	    <Button
    	        android:id="@+id/addcity"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="left"
    	        android:text="@string/addcity"
    	        android:paddingTop="5dip"
    	        android:background="@drawable/top_button_click_selector"
    	        android:textColor="#ffffff"
    	        android:textSize="14sp" />

    	    <LinearLayout
    	        android:layout_width="100dip"
    	        android:layout_height="wrap_content"
    	        android:layout_weight="0.72"
    	        android:background="@drawable/title"
    	        android:gravity="center"
    	        android:orientation="horizontal" >

    	        <TextView
    	            android:id="@+id/cityManager"
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:text="@string/cityManager"
    	            android:textSize="20sp" />
    	    </LinearLayout>

    	    <Button
    	        android:id="@+id/finishcity"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="right"
    	        android:paddingTop="5dip"
    	        android:text="@string/finishcity"
    	        android:background="@drawable/top_button_click_selector"
    	        android:textColor="#ffffff"
    	        android:textSize="14sp" />
    	</LinearLayout>
    
<!-- 使用9patch 图片，美化 -->

    <ListView
        android:id="@+id/storecitylist"
        android:layout_width="fill_parent"
        android:layout_height="342dp"
        android:background="@drawable/city_search_seach_frame"
        android:divider="#6599FF"
        android:padding="10dip"
        android:cacheColorHint="#00000000" >

</ListView>
  <net.youmi.android.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
         >
    </net.youmi.android.AdView>
</LinearLayout>